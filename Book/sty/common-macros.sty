% common-macros.sty - Shared macro definitions for ForAllX
% This file contains macros used by both the book and lecture styles

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{common-macros}[2024/01/01 Common macros for ForAllX]

% Logical operators (used in both book and lectures)
\def\therefore{\ensuremath{\ldotp\dot{}\,\ldotp}}
\def\eor{\ensuremath{\vee}}
\def\eand{\ensuremath{\wedge}}
\def\eif{\ensuremath{\rightarrow}}
\def\eiff{\ensuremath{\leftrightarrow}}
\def\enot{\ensuremath{\neg}}

% Common commands
\renewcommand{\vert}[1]{\lvert#1\rvert}
\newcommand{\corner}[1]{\ulcorner#1\urcorner}
\newcommand{\concat}[2]{{#1}{\raisebox{4pt}{\smallfrown}}{#2}}
\newcommand{\tuple}[1]{\langle#1\rangle}
\newcommand{\set}[1]{\lbrace#1\rbrace}

% Mathematical symbols
\newcommand{\I}{\mathcal{I}}
\newcommand{\J}{\mathcal{J}}
\newcommand{\B}{\mathcal{B}}
\newcommand{\M}{\mathcal{M}}
\newcommand{\N}{\mathbb{N}}
\newcommand{\PL}{\mathcal{L}^{\textsc{pl}}}
\newcommand{\FOL}{\mathcal{L}^{\textsc{fol}}}
\newcommand{\FI}{\mathcal{L}^{=}}
\newcommand{\FIN}{\mathcal{L}^{=}_{\mathbb{N}}}
\newcommand{\C}{\mathbb{C}}
\newcommand{\F}{\mathcal{F}}
\newcommand{\D}{\mathbb{D}}

% Text commands
\newcommand{\length}{\texttt{Length}}
\newcommand{\comp}{\texttt{Comp}}
\newcommand{\res}{\texttt{Res}}

% Mathematical structures
\newcommand{\T}{\mathcal{T}}
\newcommand{\V}[1]{\mathcal{V}_{#1}}
\newcommand{\VV}[2]{\mathcal{V}_{#1}^{#2}}
\newcommand{\val}[2]{\mathscr{v}_{#1}^{#2}}
\newcommand{\ext}[3]{|#1|_{#2}^{#3}}
\newcommand{\va}[1]{\hat{#1}}
\renewcommand{\v}[1]{\mathbf{#1}}

% Deduction symbols
\newcommand{\plvdash}{\vdash_{\textsc{pl}}}
\newcommand{\plvDash}{\vDash_{\PL}}
\newcommand{\fivdash}{\vdash_{\textsc{fol}^=}}
\newcommand{\fivDash}{\vDash_{\FI}}

